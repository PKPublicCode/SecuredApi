{
  "preRequestActions": [
    {
      "type": "SetRequestHeader",
      "name": "X-COMMON-REQUEST-HEADER",
      "value": "CommonRequestHeaderValue"
    }
  ],
  "onRequestErrorActions": [
    {
      "type": "SetResponseHeader",
      "name": "X-COMMON-ON-ERROR-HEADER",
      "value": "Gateway Rejected Your Call"
    }
  ],
  "onRequestSuccessActions": [
    {
      "type": "SetResponseHeader",
      "name": "X-COMMON-RESPONSE-HEADER",
      "value": "CommonResponseHeaderValue"
    }
  ],
  "routesGroups": [
    {
      // This route is used for Integration and Performance tests.
      // Be careful with deleting and updating it.
      "id": "602352d4-56e8-4269-965f-1290a92df903",
      "description": "Private routes",
      "path": "/private",
      "preRequestActions": [
        {
          "type": "CheckSubscription",
          "subscriptionKeyHeaderName": "X-SUBSCRIPTION-KEY",
          "errorNotAuthorizedBody": "Subscription key not set or invalid",
          "errorAccessDeniedBody": "Call Not Allowed"
        },
        {
          "type": "RunConsumerActions"
        }
      ],
      "routesGroups": [
        {
          "id": "caa6ca7b-1032-4370-b236-d7fa9578e8f7",
          "description": "API with redirect",
          "path": "/redirect",
          "routes": [
            {
              "id": "d24a2d63-321d-4164-aaea-67bc1e3d87c3",
              "methods": [ "get" ],
              "path": "/wildcard/*",
              "actions": [
                {
                  "type": "RemoteCall",
                  // protectedEchoPath is set by appsettings json
                  "path": "$(protectedEchoPath)",
                  "method": "get"
                }
              ]
            }
          ]
        },
        {
          "description": "Rote group that is not allowed by existing subscriptions",
          "routes": [
            {
              "id": "efa366f9-d47a-4f5f-85be-c2192a95edfa",
              "methods": [ "get" ],
              "path": "/notallowed/wildcard/*",
              "actions": [
                {
                  "type": "RemoteCall",
                  "path": "$(echoPath)",
                  "method": "get"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Public responses",
      "path": "/public",
      "routesGroups": [
        {
          "description": "echo tests",
          "path": "/echo",
          "routes": [
            {
              "methods": [ "get" ],
              "path": "/exact",
              "actions": [
                {
                  "type": "SetResponse",
                  "httpCode": 200,
                  "body": "Echo exact route"
                }
              ]
            },
            {
              "methods": [ "get" ],
              "path": "/delay",
              "actions": [
                {
                  "type": "Delay",
                  "milliseconds": 300
                },
                {
                  "type": "SetResponse",
                  "httpCode": 200,
                  "body": "Public delay route"
                }
              ]
            },
            {
              "methods": [ "get" ],
              "path": "/wildcard/*",
              "actions": [
                {
                  "type": "CheckIPs",
                  "whiteList": [ "20.20.20.21" ]
                },
                {
                  "type": "SetResponse",
                  "httpCode": 200,
                  "body": "Echo wildcard route"
                }
              ]
            },
            {
              "methods": [ "get" ],
              "path": "/content/exact",
              "actions": [
                {
                  "type": "ReturnStaticFile",
                  "fileName": "StaticFiles/welcome.html"
                }
              ]
            },
            {
              "methods": [ "get" ],
              "path": "/content/wildcard/*",
              "actions": [
                {
                  "type": "ReturnStaticFile",
                  "path": "StaticFiles/WildcardContent",
                  "notFoundMessage": "This is wrong file url"
                }
              ]
            }
          ]
        },
        {
          "description": "Remote call tests",
          "routes": [
            {
              "description": "Call to remote endpoint",
              "methods": [ "get", "post" ],
              "path": "/remote/wildcard_get_method/*",
              "actions": [
                {
                  "type": "RemoteCall",
                  "path": "$(echoPath)",
                  "method": "get"
                },
                {
                  "type": "SetResponseHeader",
                  "name": "X-PUBLIC-REDIRECT-RESPONSE-HEADER",
                  "value": "PublicRedirectResponseHeaderValue"
                },
                {
                  "type": "SuppressResponseHeaders",
                  "headers": [ "X-PUBLIC-REDIRECT-SUPPRESS-HEADER" ]
                }
              ]
            },
            {
              "description": "Call to remote endpoint",
              "methods": [ "get", "post" ],
              "path": "/remote/wildcard_original_method/*",
              "actions": [
                {
                  "type": "RemoteCall",
                  "path": "$(echoPath)",
                  "method": "@(requestHttpMethod)"
                },
                {
                  "type": "SetResponseHeader",
                  "name": "X-PUBLIC-REDIRECT-RESPONSE-HEADER",
                  "value": "PublicRedirectResponseHeaderValue"
                },
                {
                  "type": "SuppressResponseHeaders",
                  "headers": [ "X-PUBLIC-REDIRECT-SUPPRESS-HEADER" ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "routeNotFoundActions": [
    {
      "type": "SetResponseHeader",
      "name": "X-NOTFOUND-RESPONSE-HEADER",
      "value": "NotFoundResponseHeaderValue"
    },
    {
      "type": "SetResponse",
      "httpCode": 404,
      "body": "Route not found"
    }
  ]
  // Comment to test enabled comments
}
